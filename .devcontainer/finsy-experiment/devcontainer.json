{
  "name": "finsy-experiment",

  // The "universal" image is Ubuntu 20.04.6 LTS (as of 2023-05-23).
  // Reference: https://github.com/devcontainers/images
  "image": "mcr.microsoft.com/devcontainers/universal",

  "onCreateCommand": "pipx install --pip-args='-q -q' poetry",
  "postCreateCommand": "python3 -m venv .venv && poetry install -q",
  "postStartCommand": "echo 'üêü Welcome to Finsy!' && exec poetry shell",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "./.venv/bin/python"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
